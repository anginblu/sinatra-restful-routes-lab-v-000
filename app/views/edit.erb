<form action="/recipes/<%= @recipe.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <h1> Edit Recipe for: <%= @recipe.name %></h1>
  <p>
  New Name: <input type="text" name="name"><br>
  Current ingredients:<%= @recipe.ingredients %><br>
  New ingredients: <input type="text" name="ingredients"><br>
  Current cook time:<%= @recipe.cook_time %><br>
  New cook time: <input type="text" name="cook_time"><br></p>
  <input type="submit" value="submit">
</form>
